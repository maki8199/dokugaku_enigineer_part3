{
    "name": "root/html",
    "autoload": {
        "psr-4": {
            "Root\\Html\\": "src/"
        }
    },
    "require": {
        "squizlabs/php_codesniffer": "*"
    },
    "require-dev": {
        "phpmd/phpmd": "@stable",
        "phpstan/phpstan": "^1.3",
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "phpcs": "./vendor/bin/phpcs --standard=phpcs.xml",
        "phpmd": "./vendor/bin/phpmd . text phpmd.xml  --suffixed php --exclude vendor",
        "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon",
        "phpunit": "./vendor/bin/phpunit"
    }
}
